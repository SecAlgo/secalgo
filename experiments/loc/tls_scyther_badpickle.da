        await(some(received((2, nb, sid_B, pb), from_ = B), has = pb in pa)) #ServerHello
        await(some(received((3, cert_B), from_ = B), has = (verify((cert_B[0], cert_B[1]), cert_B[2], key = pk_T) != None))) #server Certificate
